mixin dropdown-button-group(default_value)
    .input-group-btn(id!=attributes.id, class!=attributes.class)
        button.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown")=default_value
            span.caret
        ul.dropdown-menu
            block

mixin dropdown(label)
    .form-group(class!=attributes.class)
        if label
            label(for!=attributes.id)=label
        select(id!=attributes.id, class="form-control", name!=attributes.id)
            block


mixin checkbox(l)
    .form-group
        .checkbox(class!=attributes.class)
            label(for!=attributes.id)
                input(type="checkbox",  id!=attributes.id, name!=attributes.id)
                span= l

