mixin radioinlineformgroup(label, values_arr)
    div.form-group
        +radioinline(label, values_arr)

mixin radioinline(label, values_arr)
    strong= label
    span &nbsp;
    div(id!=attributes.id)
        - each val in values_arr
            .radio-inline(class!=attributes.class)
                label
                    input(type="radio", name!=attributes.name, value!= val[0])
                    span= val[1]

