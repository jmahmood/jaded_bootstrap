mixin basic_modal(title, btn_list)
    .modal.fade(class!=attributes.class, id!=attributes.id)
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
                    h4.modal-title= title
                .modal-body
                    if block
                        block
                    else
                        p No modal text provided
                .modal-footer
                    if btn_list
                        each btn in btn_list
                            button.btn(type="button", id=btn[2], class=btn[1])!= btn[0]
                    button.btn.btn-default(type="button", data-dismiss="modal") Close

mixin panel(title)
    div(class!=attributes.class, id!=attributes.id)
        div.panel.panel-info
            div.panel-heading= title
            div.panel-body
                if block
                    block
                else
                    p No panel text provided

mixin progressbar(per)
    .progress(id!=attributes.id, class!=attributes.class)
        .progress-bar.progress-bar-info(
        role="progressbar",
        aria-valuenow=per,
        aria-valuemin="0",
        aria-valuemax="100",
        style="width: " + per + "%")
            span.sr-only= per
                span Completed

mixin nav-tabs()
    ul.nav.nav-tabs(id!=attributes.id, class!=attributes.class)
        block

mixin nav-pills()
