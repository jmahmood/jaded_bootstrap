        block

mixin navbar(collapse_id)
    nav.navbar.navbar-default(role="navigation", class!=attributes.class)
        .container-fluid
            .navbar-header
                button.navbar-toggle(type="button", data-toggle="collapse", data-target="#" + collapse_id)
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#")
                    i.glyphicon.glyphicon-cloud
                    | &nbsp; JetLife
            .collapse.navbar-collapse(id=collapse_id)
                if block
                    block
                else
                    li No panel text provided

